    <title>Trade Site - Feed Page</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!-- Custom styles for this template -->
    <link href="/public/css/home.css" rel="stylesheet">
  </head>

  <body>

    <header>
    </header>

    <main role="main">
      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Trade Site</h1>
          <p class="lead text-muted">Main Feed Page</p>
        </div>
        <div class = "search">
          <div class= "row">
            <form action="/itemPost" method="POST">
              <input type="hidden" id="username" name="name" class="form-control" value= "<%= user %>">
              <button style="margin-bottom:.5cm;" type="submit" class="btn btn-sm btn-secondary btn-block">Create Post</button>
            </form>
            <form action="/refresh" method="POST">
              <input type="hidden" id="username" name="name" class="form-control" value= "<%= user %>">
              <button type="submit" class="btn btn-sm btn-secondary btn-block">Refresh</button>
            </form>
            <a href="/" style="margin-bottom:.5cm;" class="btn-sm btn-secondary ">Log Out</a>

          </div>
        </div>
        <form action="/searchItem" method="POST">
          <div class = "search">
            <input type="hidden" id="username" name="name" class="form-control" value= "<%= user %>">
            <input class="lead text-muted" id="name" name="search" placeholder="Search Bar ex.Bicycle">
          </div>
          <div class = "search">
            <button type="submit"  class="btn  btn-primary btn-block">Search</button>
          </div>
        </form>

      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          
        <%  var maxPosts = itemList.length - (itemList.length % 3)
            var tracker = 0
            for(var i = 0; i < maxPosts; i += 3) { %>
            <div class="row">

              <% for(var j = 0; j < 3; j++) { %>

              <div class="col-md-4">
                <form action="/getItemInfo" method="POST">
                  <div class="card mb-4 box-shadow">
                    <input type="image" alt="more info" class="card-img-top"  alt="Item Picture" src="<%= itemList[j + tracker].iURL %>">
                    <div class="card-body">
                      <p class="card-text"><%= itemList[j + tracker].iDes %> </p>
                      <input type="hidden" name="activeUser" value="<%= user %>">
                      <input type="hidden" name="id" value="<%= itemList[j + tracker].id %>">
                    </div>
                </form>
                </div>
              </div>
            
              <% } 
            tracker += 3        %>

            </div>
  
          <% } %>

        </div>
      </div>

    </main>

    <footer class="text-muted">
      <div class="container">
        <p class="float-right">
          <a href="#">Back to top</a>
        </p>
      </div>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
